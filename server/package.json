{
  "name": "admin-base-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "start:server:dev": "bun --env-file=../.env --env-file=.env --watch src/app/backend/index.ts",
    "start:dev": "bun --env-file=../.env --env-file=.env --watch src/app/dev-runner.ts",
    "build:server": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile app_server ./src/app/server/index.ts",
    "start:server:prod": "bun run build:server && ./app_server",
    "db:migrate": "bunx prisma migrate dev --create-only --name init",
    "db:deploy": "bunx prisma migrate deploy",
    "db:generate": "bunx prisma generate",
    "db:dev:reset": "bunx prisma migrate reset --force",
    "typecheck": "bunx tsgo --noEmit",
    "seed": "bun run src/scripts/seed.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.15.0",
    "@bull-board/elysia": "^6.15.0",
    "@bull-board/ui": "^6.15.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/opentelemetry": "^1.4.9",
    "@elysiajs/server-timing": "^1.4.0",
    "@logtape/file": "^1.2.2",
    "@logtape/logtape": "^1.2.2",
    "@logtape/pretty": "^1.2.2",
    "@open-draft/deferred-promise": "^2.2.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@sapphire/snowflake": "^3.5.5",
    "@sinclair/typebox": "^0.34.41",
    "bullmq": "^5.66.0",
    "dayjs": "^1.11.19",
    "decimal.js": "^10.6.0",
    "elysia": "1.4.19",
    "elysia-rate-limit": "^4.4.2",
    "elysia-xss": "^1.0.3",
    "elysiajs-helmet": "^1.0.2",
    "google-auth-library": "^10.5.0",
    "jose": "^6.1.3",
    "mime-types": "^3.0.2",
    "nodemailer": "^7.0.11",
    "otplib": "^12.0.1",
    "react": "^19.2.3",
    "superjson": "^2.2.6",
    "svg-captcha": "^1.4.0",
    "type-fest": "^5.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.4",
    "@types/mime-types": "^3.0.1",
    "@types/nodemailer": "^7.0.4",
    "bun-types": "1.3.4",
    "prisma": "^7.1.0",
    "@typescript/native-preview": "^7.0.0-dev.20251214.1"
  }
}
