{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "preserve",
    "module": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "bun-types"
    ],
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@server": [
        "./src/index.ts"
      ],
      "@server/*": [
        "./src/*"
      ],
      "@client/*": [
        "./client/src/*"
      ]
    }
  }
}
