{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "preserve",
    "module": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "bun-types"
    ],
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@server": [
        "./src/index.ts"
      ],
      "@server/*": [
        "./src/*"
      ],
      "@client/*": [
        "./client/*"
      ],
      "@/*": [
        "./client/*"
      ],
      "@/components": [
        "./client/components"
      ],
      "@/components/*": [
        "./client/components/*"
      ],
      "@/lib": [
        "./client/libs"
      ],
      "@/lib/*": [
        "./client/libs/*"
      ],
      "@/hooks": [
        "./client/hooks"
      ],
      "@/hooks/*": [
        "./client/hooks/*"
      ]
    }
  }
}
