{
  "name": "investment-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": ["server", "client"],
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "bun run dev:server",
    "dev:server": "bun run --cwd server start:server:dev",
    "dev:client": "bun run --cwd client dev",
    "build": "bun run build:server && bun run build:client",
    "build:server": "bun run --cwd server build:server",
    "build:client": "bun run --cwd client build",
    "preview:client": "bun run --cwd client preview",
    "test": "bun run --cwd server test",
    "lint": "bunx @biomejs/biome lint .",
    "lint:server": "bun run --cwd server lint",
    "format": "bunx @biomejs/biome format --write .",
    "format:server": "bun run --cwd server format",
    "check": "bunx @biomejs/biome check .",
    "check:server": "bun run --cwd server check",
    "typecheck": "bun run --cwd server typecheck",
    "db:migrate": "bun run --cwd server db:migrate",
    "db:deploy": "bun run --cwd server db:deploy",
    "db:generate": "bun run --cwd server db:generate",
    "db:dev:reset": "bun run --cwd server db:dev:reset",
    "seed": "bun run --cwd server seed"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7"
  }
}

