{
  "name": "admin-base-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "server",
    "client"
  ],
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev:server": "bun run --cwd server start:dev",
    "dev:client": "bun run --cwd client dev",
    "build:server": "bun run --cwd server build",
    "build:client": "bun run --cwd client build",
    "preview:client": "bun run --cwd client preview",
    "lint": "bunx @biomejs/biome lint . --write",
    "format": "bunx @biomejs/biome format --write .",
    "check": "bunx @biomejs/biome check . --write",
    "typecheck": "bun run typecheck:server && bun run typecheck:client",
    "typecheck:server": "bun run --cwd server typecheck",
    "typecheck:client": "bun run --cwd client typecheck",
    "db:migrate": "bun run --cwd server db:migrate",
    "db:deploy": "bun run --cwd server db:deploy",
    "db:generate": "bun run --cwd server db:generate",
    "db:dev:reset": "bun run --cwd server db:dev:reset",
    "seed": "bun run --cwd server seed"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13"
  }
}
